                    <!-- Demo content-->
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <h3 class="display-4">Alta de Candidatos</h3>

                                <form id="formulario" action="/api/votapi" method="POST">
                                    <div class="form-group mb-3">
                                        <input id="nombreApellido" name="nombreApellido" type="text" placeholder="Nombre Completo" class="form-control rounded-pill border-0 shadow-sm px-4">
