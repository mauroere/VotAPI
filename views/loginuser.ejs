<% include header.ejs %>

    <div class="container-fluid">
        <div class="row no-gutter">
            <div class="col-md-12">
                <div class="login d-flex align-items-center py-5">
<div class="alert alert-danger d-none">
                        <p id="error"></p>
                    </div>
                    <!-- Acceso a Usuarios -->
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-10 col-xl-7 mx-auto">
                                <h3 class="display-4">Acceso Usuarios</h3>

                                <div class="alert alert-danger d-none">
                                    <p id="error"></p>
                                </div>
                                <p class="text-muted mb-4">Complete todos los campos para ingresar</p>
                                <form id='formulario' method="POST" action="/users" onsubmit="return checkDNI();">
                                    <div class="form-group mb-3">
                                        <input id="nombreApellido" name="nombreApellido" type="text" placeholder="Nombre Completo" autofocus="" class="form-control rounded-pill border-0 shadow-sm px-4">
                                    </div>
                                    <div class="form-group mb-3">
                                        <input id="dni" type="number" name="dni" placeholder="DNI" autofocus="" class="form-control rounded-pill border-0 shadow-sm px-4 text-primary" required>
                                    </div>

                                    <div class="form-check form-group mb-3">
                                        <input class="form-check-input" type="radio" name="sexo" id="femenino" value="femenino">
                                        <label class="form-check-label" for="femenino">
                                          Femenino
                                        </label>
                                    </div>
                                    <div class="form-check form-group mb-3">
                                        <input class="form-check-input" type="radio" name="sexo" id="masculino" value="masculino">
                                        <label class="form-check-label" for="masculino">
                                          Masculino
                                        </label>
                                    </div>

                                    <button type="submit" id='boton_enviar' class="btn btn-primary btn-block text-uppercase mb-2 rounded-pill shadow-sm">INGRESAR</button>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Fin -->
        </div>
    </div>

    </main>
    <script src="/javascript/udyavoto.js"></script>
